<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hy.AndroidBase">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.hy.app.config.MyApplication"
        android:theme="@style/AppTheme">

        <activity android:name="com.hy.app.activity.AndroidbaseActivity" android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.hy.app.activity.DesignpatternsActivity" android:theme="@style/AppTheme"/>
        <activity android:name="com.hy.base.androidbase.rxjava.MyRxjavaActivity" android:theme="@style/AppTheme"/>

        <!--model-->
        <activity android:name="com.hy.designpatterns.observer.ObserverActivity" android:theme="@style/AppTheme"/>
        <activity android:name="com.hy.designpatterns.build.BuildTestActivity" android:theme="@style/AppTheme"/>

    </application>

</manifest>